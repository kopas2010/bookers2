<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class='row'>

 <div class= "col-md-3">
  <%= render 'books/book', book:@book_new, user:@user %>
 </div>

  <div class= "col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
        <%= image_tag book.user.get_image %>
        <% end %>
      </td>
      <td><%= link_to book.title,book_path(book.id)  %></td>
      <td><%= book.body %></td>
    <% end %>
    </tr>
  </table>
</div>
</div>
</div>