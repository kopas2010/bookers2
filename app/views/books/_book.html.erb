
<h2>User info</h2>

 <%= image_tag user.get_image %>



<h5>name</h5>
<%= user.name %>
<h5>introduction</h5>
<%= user.introduction %>


<%= link_to edit_user_path(user.id) do %><span class='fas fa-user-cog'></span><% end %>



<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: book,method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
